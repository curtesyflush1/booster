{
  "name": "booster-beacon-backend",
  "version": "1.0.0",
  "description": "BoosterBeacon backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "test:security": "jest --config jest.security.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:security && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:integration",
    "test:comprehensive": "ts-node scripts/test-runner.ts",
    "test:enhance-coverage": "ts-node scripts/enhance-test-coverage.ts",
    "test:smoke": "jest --testPathPattern=smoke --testTimeout=30000",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage:watch": "jest --coverage --watchAll",
    "test:failed": "jest --onlyFailures",
    "lint": "echo 'Linting backend code...'",
    "lint:fix": "echo 'Fixing backend code...'",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "migrate": "npm run migrate:up",
    "rbac:init": "ts-node scripts/initialize-rbac.ts",
    "rbac:validate": "ts-node scripts/initialize-rbac.ts -- --validate",
    "rbac:repair": "ts-node scripts/initialize-rbac.ts -- --repair",
    "rbac:test": "ts-node scripts/test-rbac.ts",
    "seed:dev": "knex seed:run",
    "seed": "npm run seed:dev",
    "import:products": "ts-node scripts/import-products-from-csv.ts --file ./data/products.csv",
    "db:backup": "pg_dump $DATABASE_URL > backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "kms:test": "ts-node scripts/simple-kms-test.ts",
    "kms:test-integration": "ts-node scripts/test-kms-integration.ts",
    "catalog:ingest": "ts-node scripts/run-catalog-ingestion.ts",
    "alerts:generate-test": "ts-node scripts/generate-test-alerts.ts",
    "alerts": "npm run alerts:generate-test",
    "ts-node": "ts-node",
    "ml:pipeline": "ts-node scripts/run-ml-pipeline.ts",
    "ml": "npm run ml:pipeline",
    "ml:etl": "ts-node scripts/run-ml-training-etl.ts",
    "admin:set-password": "ts-node scripts/admin-set-password.ts"
  },
  "keywords": [
    "pokemon",
    "tcg",
    "alerts",
    "collector"
  ],
  "author": "BoosterBeacon",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-kms": "^3.876.0",
    "@aws-sdk/client-ssm": "^3.876.0",
    "@google-cloud/kms": "^4.5.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/nodemailer": "^7.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "csv-stringify": "^6.6.0",
    "csv-writer": "^1.6.0",
    "discord.js": "^14.22.1",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsdom": "^23.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "puppeteer-core": "^24.17.0",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "stripe": "^18.4.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/web-push": "^3.6.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
