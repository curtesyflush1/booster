{
  "name": "booster-beacon-frontend",
  "version": "1.0.0",
  "description": "BoosterBeacon frontend React PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "analyze": "ANALYZE=true npm run build",
    "analyze:report": "node scripts/analyze-bundle.js",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:browser": "vitest --run --browser.enabled --browser.name=chromium",
    "test:browser:firefox": "vitest --run --browser.enabled --browser.name=firefox",
    "test:browser:webkit": "vitest --run --browser.enabled --browser.name=webkit",
    "test:cross-browser": "npm run test:browser && npm run test:browser:firefox && npm run test:browser:webkit",
    "test:pwa": "playwright test tests/cross-browser/pwa.browser.test.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "axios": "^1.11.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.31",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "workbox-window": "^7.0.0"
  },
  "keywords": [
    "pokemon",
    "tcg",
    "alerts",
    "collector",
    "react",
    "pwa"
  ],
  "author": "BoosterBeacon",
  "license": "MIT"
}
