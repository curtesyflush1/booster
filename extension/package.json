{
  "name": "booster-beacon-extension",
  "version": "1.0.0",
  "description": "BoosterBeacon browser extension for Pok√©mon TCG collectors",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:chrome": "npm run build && npm run copy:chrome",
    "build:firefox": "npm run build && npm run copy:firefox",
    "copy:chrome": "cp manifest/manifest.chrome.json dist/manifest.json",
    "copy:firefox": "cp manifest/manifest.firefox.json dist/manifest.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest tests/services",
    "test:integration": "jest tests/integration",
    "test:checkout": "jest tests/services/checkoutAutomation.test.ts",
    "test:credentials": "jest tests/services/credentialManager.test.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rm -rf dist",
    "package:chrome": "npm run build:chrome && cd dist && zip -r ../booster-beacon-chrome.zip .",
    "package:firefox": "npm run build:firefox && cd dist && zip -r ../booster-beacon-firefox.zip ."
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "pokemon",
    "tcg",
    "alerts",
    "collector",
    "browser-extension",
    "chrome",
    "firefox"
  ],
  "author": "BoosterBeacon",
  "license": "MIT"
}
