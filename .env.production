# BoosterBeacon Production Environment Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://booster_user:your_secure_password_here@db:5432/boosterbeacon_prod

# Redis Configuration  
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=https://your-domain.com

# Email Configuration (Amazon SES recommended for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_FROM_EMAIL=alerts@your-domain.com
FROM_EMAIL=alerts@your-domain.com
FROM_NAME=BoosterBeacon

# Alternative SMTP Configuration (if not using SES)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password

# Twilio SMS (Pro features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Discord Integration (Pro features)
DISCORD_BOT_TOKEN=your_discord_bot_token

# Web Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@your-domain.com

# Retailer APIs
BESTBUY_API_KEY=your_bestbuy_api_key
WALMART_API_KEY=your_walmart_api_key
COSTCO_API_KEY=your_costco_api_key
SAMS_CLUB_API_KEY=your_sams_club_api_key

# Key Management Service (KMS) Configuration
KMS_PROVIDER=env
KMS_KEY_ID=default
KMS_TIMEOUT=10000
KMS_RETRY_ATTEMPTS=3
ENCRYPTION_KEY=your_encryption_key_here_32_chars_minimum_change_this

# ML and Analytics Configuration
ML_MODEL_PATH=/app/models
PRICE_COMPARISON_CACHE_TTL=3600
SEO_BASE_URL=https://your-domain.com
ADMIN_SESSION_SECRET=your_admin_session_secret_change_this

# Monitoring and Performance
GRAFANA_PASSWORD=your_grafana_password_change_this
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=24
APP_VERSION=1.0.0

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Advanced Configuration
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_KEEPALIVE=30000
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com